<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Sentinela STP - Transporte é Saúde</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;900&display=swap');
        
        :root {
            --safe-top: env(safe-area-inset-top);
            --safe-bottom: env(safe-area-inset-bottom);
        }

        body { 
            font-family: 'Inter', sans-serif; 
            touch-action: manipulation;
            overscroll-behavior: none;
            -webkit-tap-highlight-color: transparent;
        }

        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

        .active-zone {
            background-color: #1d4ed8 !important;
            color: white !important;
            border-color: #1d4ed8 !important;
            transform: scale(0.98);
        }

        .meter-glow {
            transition: all 0.3s ease;
        }

        .danger-mode {
            background-color: #fef2f2;
            border-color: #fecaca;
        }

        input[type=range] {
            -webkit-appearance: none;
            width: 100%;
            background: transparent;
        }

        input[type=range]::-webkit-slider-thumb {
            -webkit-appearance: none;
            height: 28px;
            width: 28px;
            border-radius: 50%;
            background: #1d4ed8;
            cursor: pointer;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            border: 4px solid white;
            margin-top: -10px;
        }

        input[type=range]::-webkit-slider-runnable-track {
            width: 100%;
            height: 8px;
            cursor: pointer;
            background: #e2e8f0;
            border-radius: 4px;
        }

        /* Indicadores de Permissão */
        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
        }
    </style>
</head>
<body class="bg-slate-50 text-slate-900 h-screen flex flex-col overflow-hidden">

    <!-- Header Compacto -->
    <header class="bg-blue-700 text-white px-4 pt-2 pb-3 shadow-md flex-none">
        <div class="max-w-md mx-auto flex justify-between items-center">
            <div>
                <h1 class="text-lg font-black tracking-tighter flex items-center gap-1">
                    <i data-lucide="shield-alert" size="18"></i> SENTINELA STP
                </h1>
                <p class="text-[9px] font-bold opacity-70 uppercase tracking-widest">Saúde Pública • Florianópolis</p>
            </div>
            <div id="status-badge" class="bg-blue-900/50 text-[9px] px-2 py-1 rounded-full border border-blue-400/50 font-bold uppercase">Aguardando</div>
        </div>
    </header>

    <!-- Área de Conteúdo Principal (Scrollable) -->
    <main class="flex-1 overflow-y-auto no-scrollbar pb-6">
        <div class="max-w-md mx-auto p-4 space-y-4">
            
            <!-- Painel de Permissões -->
            <section class="bg-white p-3 rounded-xl shadow-sm border border-slate-200 flex justify-between items-center">
                <div class="flex gap-4">
                    <div class="flex items-center gap-2 text-[9px] font-black uppercase text-slate-400">
                        <span id="mic-dot" class="status-dot bg-slate-200"></span> Mic
                    </div>
                    <div class="flex items-center gap-2 text-[9px] font-black uppercase text-slate-400">
                        <span id="geo-dot" class="status-dot bg-slate-200"></span> GPS
                    </div>
                </div>
                <button onclick="requestPermissions()" class="text-[8px] font-black text-blue-600 uppercase underline">Pedir Permissões</button>
            </section>

            <!-- Identificação do Veículo -->
            <section class="bg-white p-3 rounded-2xl shadow-sm border border-slate-200">
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label class="text-[9px] font-black text-slate-400 uppercase mb-1 block">Linha/Destino</label>
                        <input type="text" id="bus-line" placeholder="Ex: P. do Sul" 
                            class="w-full bg-slate-50 border border-slate-100 rounded-xl px-3 py-2 text-sm font-bold focus:ring-2 focus:ring-blue-500 outline-none">
                    </div>
                    <div>
                        <label class="text-[9px] font-black text-slate-400 uppercase mb-1 block">Prefixo/Carro</label>
                        <input type="number" id="bus-number" placeholder="12345" 
                            class="w-full bg-slate-50 border border-slate-100 rounded-xl px-3 py-2 text-sm font-bold focus:ring-2 focus:ring-blue-500 outline-none">
                    </div>
                </div>
                
                <div class="mt-3">
                    <label class="text-[9px] font-black text-slate-400 uppercase mb-2 block tracking-wider">Sua Posição no Ônibus</label>
                    <div class="grid grid-cols-3 gap-2">
                        <button onclick="setZone('Frente')" id="zone-Frente" class="zone-btn h-10 bg-slate-50 border border-slate-100 rounded-xl text-[10px] font-bold uppercase transition-all">Frente</button>
                        <button onclick="setZone('Meio')" id="zone-Meio" class="zone-btn active-zone h-10 bg-slate-50 border border-slate-100 rounded-xl text-[10px] font-bold uppercase transition-all">Meio</button>
                        <button onclick="setZone('Fundo')" id="zone-Fundo" class="zone-btn h-10 bg-slate-50 border border-slate-100 rounded-xl text-[10px] font-bold uppercase transition-all">Fundo</button>
                    </div>
                </div>
            </section>

            <!-- Medidor de Ruído Central -->
            <section id="meter-card" class="bg-white py-8 px-6 rounded-[2.5rem] shadow-sm border border-slate-200 text-center relative overflow-hidden transition-all duration-300">
                <div id="danger-overlay" class="absolute inset-0 bg-red-500/10 opacity-0 pointer-events-none transition-opacity"></div>
                
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Pressão Sonora Real</p>
                <div class="flex justify-center items-baseline">
                    <span id="db-display" class="text-8xl font-black tracking-tighter tabular-nums">0</span>
                    <span class="text-xl font-bold text-slate-300 ml-1">dB</span>
                </div>
                
                <div id="db-status" class="inline-block mt-4 px-4 py-1 rounded-full text-[9px] font-black uppercase tracking-widest bg-slate-100 text-slate-400">Sensor Offline</div>

                <div class="mt-8 w-full h-3 bg-slate-100 rounded-full overflow-hidden border border-white">
                    <div id="db-progress" class="h-full bg-blue-500 w-0 transition-all duration-150"></div>
                </div>
                <div class="flex justify-between mt-2 text-[8px] font-bold text-slate-300 uppercase">
                    <span>30dB</span>
                    <span class="text-red-500 font-black">Limite Saúde: 85dB</span>
                    <span>110dB</span>
                </div>
            </section>

            <!-- Temperatura Manual -->
            <section class="bg-white p-4 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex justify-between items-center mb-4">
                    <div class="flex items-center gap-2">
                        <i data-lucide="thermometer" class="text-blue-600" size="16"></i>
                        <span class="text-[10px] font-black text-slate-400 uppercase">Temperatura Local</span>
                    </div>
                    <span id="temp-val" class="text-2xl font-black text-blue-700">24°C</span>
                </div>
                <input type="range" id="temp-input" min="15" max="45" value="24" class="mb-2">
                <p class="text-[8px] text-center font-bold text-slate-400 uppercase italic">Ajuste pelo seu termômetro físico</p>
            </section>

            <!-- Logs e Estatísticas -->
            <section class="space-y-3 pb-20">
                <div class="flex justify-between items-center px-1">
                    <h2 class="text-xs font-black text-slate-800 uppercase tracking-tight">Logs de Infratividades</h2>
                    <button onclick="downloadCSV()" id="btn-csv" class="hidden text-[9px] font-black bg-slate-900 text-white px-3 py-1.5 rounded-lg uppercase">Exportar</button>
                </div>
                
                <div id="log-list" class="space-y-2">
                    <div id="empty-state" class="py-10 bg-white/50 rounded-2xl border-2 border-dashed border-slate-200 text-center">
                        <i data-lucide="database" class="mx-auto mb-2 text-slate-200" size="32"></i>
                        <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest">Nenhuma infração registrada</p>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer Fixo com Controles -->
    <footer class="bg-white border-t border-slate-200 p-4 flex-none shadow-[0_-4px_10px_rgba(0,0,0,0.03)] pb-[calc(1rem+var(--safe-bottom))]">
        <div class="max-w-md mx-auto grid grid-cols-5 gap-3">
            <div class="col-span-1 flex flex-col items-center justify-center opacity-40">
                <i data-lucide="map-pin" size="16"></i>
                <span id="gps-indicator" class="text-[7px] font-bold mt-1 tracking-tighter uppercase">OFF</span>
            </div>
            
            <button id="main-action" class="col-span-4 bg-blue-600 active:bg-blue-800 text-white font-black py-4 rounded-xl shadow-lg shadow-blue-200 transition-all flex items-center justify-center gap-2 text-sm uppercase tracking-widest">
                <i data-lucide="play" size="18"></i> Iniciar Fiscalização
            </button>
            
            <button id="stop-action" class="hidden col-span-4 bg-slate-900 active:bg-black text-white font-black py-4 rounded-xl shadow-lg transition-all flex items-center justify-center gap-2 text-sm uppercase tracking-widest">
                <i data-lucide="square" size="18"></i> Parar Sensores
            </button>
        </div>
    </footer>

    <script>
        lucide.createIcons();

        let audioCtx, analyser, mic, dataArr, animId;
        let isActive = false;
        let currentZone = "Meio";
        let records = [];
        let lastRecordTime = 0;
        let userStream = null;
        const THRESHOLD_DB = 85;
        const RECORD_GAP = 8000; 

        // UI
        const dbText = document.getElementById('db-display');
        const dbStatus = document.getElementById('db-status');
        const dbBar = document.getElementById('db-progress');
        const meterCard = document.getElementById('meter-card');
        const dangerBg = document.getElementById('danger-overlay');
        const tempRange = document.getElementById('temp-input');
        const tempText = document.getElementById('temp-val');
        const mainBtn = document.getElementById('main-action');
        const stopBtn = document.getElementById('stop-action');
        const logList = document.getElementById('log-list');
        const emptyState = document.getElementById('empty-state');
        const exportBtn = document.getElementById('btn-csv');
        const gpsLabel = document.getElementById('gps-indicator');
        const micDot = document.getElementById('mic-dot');
        const geoDot = document.getElementById('geo-dot');

        // Pedir permissões logo no início
        window.onload = () => requestPermissions();

        async function requestPermissions() {
            try {
                // Mic
                userStream = await navigator.mediaDevices.getUserMedia({ 
                    audio: { echoCancellation: false, noiseSuppression: false, autoGainControl: false } 
                });
                micDot.className = "status-dot bg-green-500 shadow-[0_0_5px_rgba(34,197,94,0.5)]";
                
                // GPS
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition((p) => {
                        geoDot.className = "status-dot bg-green-500 shadow-[0_0_5px_rgba(34,197,94,0.5)]";
                        gpsLabel.innerText = `${p.coords.latitude.toFixed(3)}, ${p.coords.longitude.toFixed(3)}`;
                        gpsLabel.parentElement.classList.remove('opacity-40');
                    }, () => {
                        geoDot.className = "status-dot bg-red-500";
                    }, {enableHighAccuracy: true});
                }
            } catch (err) {
                micDot.className = "status-dot bg-red-500";
            }
        }

        function setZone(z) {
            currentZone = z;
            document.querySelectorAll('.zone-btn').forEach(b => b.classList.remove('active-zone'));
            document.getElementById(`zone-${z}`).classList.add('active-zone');
            if(navigator.vibrate) navigator.vibrate(15);
        }

        tempRange.addEventListener('input', (e) => {
            const v = e.target.value;
            tempText.innerText = `${v}°C`;
            tempText.className = v >= 28 ? 'text-2xl font-black text-orange-600' : 'text-2xl font-black text-blue-700';
        });

        async function initSensors() {
            const line = document.getElementById('bus-line').value;
            if(!line) { alert("Informe a linha primeiro."); return; }

            try {
                if (!userStream) {
                    userStream = await navigator.mediaDevices.getUserMedia({ audio: true });
                }
                
                const AudioContextClass = window.AudioContext || window.webkitAudioContext;
                audioCtx = new AudioContextClass();
                if (audioCtx.state === 'suspended') await audioCtx.resume();
                
                analyser = audioCtx.createAnalyser();
                mic = audioCtx.createMediaStreamSource(userStream);
                analyser.fftSize = 256;
                dataArr = new Uint8Array(analyser.frequencyBinCount);
                mic.connect(analyser);

                isActive = true;
                updateLoop();

                mainBtn.classList.add('hidden');
                stopBtn.classList.remove('hidden');
                exportBtn.classList.remove('hidden');
                document.getElementById('status-badge').innerText = "MONITORANDO";
                document.getElementById('status-badge').className = "bg-red-600 text-[9px] px-2 py-1 rounded-full border border-red-400 font-black animate-pulse uppercase";

            } catch (err) {
                alert("Erro ao acessar hardware. Verifique as permissões de microfone.");
            }
        }

        function stopSensors() {
            isActive = false;
            cancelAnimationFrame(animId);
            if(audioCtx) audioCtx.suspend();
            
            stopBtn.classList.add('hidden');
            mainBtn.classList.remove('hidden');
            document.getElementById('status-badge').innerText = "AGUARDANDO";
            document.getElementById('status-badge').className = "bg-blue-900/50 text-[9px] px-2 py-1 rounded-full border border-blue-400/50 font-bold uppercase";
            dbText.innerText = "0";
            dbBar.style.width = "0%";
            dangerBg.style.opacity = "0";
            dbStatus.innerText = "Sensor Pausado";
        }

        function updateLoop() {
            if(!isActive) return;
            analyser.getByteTimeDomainData(dataArr);
            
            let sumSq = 0;
            let hasSignal = false;
            for(let i=0; i<dataArr.length; i++) {
                if(dataArr[i] !== 128) hasSignal = true;
                const norm = (dataArr[i] - 128) / 128;
                sumSq += norm * norm;
            }
            
            const rms = Math.sqrt(sumSq / dataArr.length);
            let db = 0;
            if(hasSignal && rms > 0) {
                db = Math.round(20 * Math.log10(rms) + 105);
            }
            
            // Piso de ruído
            if(hasSignal && db > 0 && db < 35) db = 35 + Math.floor(Math.random() * 3);
            
            dbText.innerText = db;
            let p = Math.min(Math.max((db-30)/(110-30)*100, 0), 100);
            dbBar.style.width = `${p}%`;

            if(db >= THRESHOLD_DB) {
                dbStatus.innerText = "⚠️ EXCESSO DE RUÍDO";
                dbStatus.className = "inline-block mt-4 px-4 py-1 rounded-full text-[9px] font-black uppercase tracking-widest bg-red-100 text-red-600 animate-bounce";
                dbBar.className = "h-full bg-red-600 transition-all";
                dangerBg.style.opacity = "1";
                addLog(db);
            } else {
                dbStatus.innerText = db > 0 ? "Captura Ativa" : "Sem sinal";
                dbStatus.className = `inline-block mt-4 px-4 py-1 rounded-full text-[9px] font-black uppercase tracking-widest ${db > 0 ? 'bg-blue-50 text-blue-400' : 'bg-slate-100 text-slate-300 animate-pulse'}`;
                dbBar.className = "h-full bg-blue-500 transition-all";
                dangerBg.style.opacity = "0";
            }

            animId = requestAnimationFrame(updateLoop);
        }

        function addLog(db) {
            const now = Date.now();
            if(now - lastRecordTime < RECORD_GAP) return;
            lastRecordTime = now;

            const log = {
                t: new Date().toLocaleTimeString('pt-BR'),
                db: db,
                temp: tempRange.value,
                line: document.getElementById('bus-line').value,
                bus: document.getElementById('bus-number').value || "S/N",
                zone: currentZone,
                loc: gpsLabel.innerText
            };

            records.unshift(log);
            renderLogs();
            if(navigator.vibrate) navigator.vibrate([100, 50, 100]);
        }

        function renderLogs() {
            emptyState.classList.add('hidden');
            logList.innerHTML = '';
            records.slice(0, 15).forEach(r => {
                const div = document.createElement('div');
                div.className = "bg-white p-3 rounded-xl border-l-4 border-red-500 shadow-sm flex justify-between items-center";
                div.innerHTML = `
                    <div class="space-y-1">
                        <div class="flex items-center gap-1.5">
                            <span class="bg-red-600 text-white text-[8px] font-black px-1.5 py-0.5 rounded tracking-tighter">${r.db}dB</span>
                            <span class="bg-blue-100 text-blue-700 text-[8px] font-black px-1.5 py-0.5 rounded tracking-tighter">${r.temp}°C</span>
                            <span class="text-slate-400 text-[8px] font-bold uppercase ml-1">${r.t}</span>
                        </div>
                        <p class="text-[11px] font-black text-slate-700">${r.line} <span class="text-slate-300 font-medium">#${r.bus}</span></p>
                    </div>
                    <div class="text-[8px] font-bold text-slate-400 text-right uppercase leading-none">
                        ${r.zone}<br><span class="text-blue-400">${r.loc}</span>
                    </div>
                `;
                logList.appendChild(div);
            });
        }

        function downloadCSV() {
            if(!records.length) return;
            let csv = "Hora,Ruido_dB,Temperatura,Linha,Carro,Zona,Localizacao\n";
            records.forEach(r => {
                csv += `${r.t},${r.db},${r.temp},${r.line},${r.bus},${r.zone},${r.loc}\n`;
            });
            const blob = new Blob([csv], {type: 'text/csv'});
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `sentinela_stp_${Date.now()}.csv`;
            a.click();
        }

        mainBtn.addEventListener('click', initSensors);
        stopBtn.addEventListener('click', stopSensors);
    </script>
</body>
</html>